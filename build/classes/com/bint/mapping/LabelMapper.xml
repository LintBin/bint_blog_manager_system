<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bint.mapper.LabelMapper">
	<sql id="label">
		id , labelName
	</sql>
	
	<sql id="labelWithoutId">
		labelName
	</sql>
	
	<insert id="add" parameterType="com.bint.model.LabelModel"
		keyProperty="id">
		insert into BLOG_label (
		<include refid="labelWithoutId" />
		) values
		(
			#{labelName}
		)
	</insert>
	<select id="getList" resultType="com.bint.model.LabelModel" parameterType="com.bint.vo.PageVo">
		select
			<include refid="label" />
		from BLOG_label
		where
		<if test="object != null and object != '' ">
			labelName LIKE CONCAT('%',#{object,jdbcType=VARCHAR},'%') AND
		</if>
		1=1
	</select>
	
	
	<select id="delete" parameterType="Long" resultType="Integer">
		delete from BLOG_label where id = #{id} 
	</select>
</mapper>